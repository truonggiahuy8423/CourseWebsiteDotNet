@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LearnHub Course Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body style="background-color:#cfcfcf">

    <div class="container " style="margin-top : 200px">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div style="border-bottom:none !important"><div style="display: flex; justify-content: center; margin-top: 10px; margin-bottom: 10px;"><img class="login-form__logo" src="~/img/logo_course.png" alt="Logo"></div></div>
                    <div class="card-body">
                        <h3 class="card-title text-start mb-3">Forgot Password</h3>
                        <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <button type="submit" id="btn-sendmail" class="btn btn-dark">Send</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#btn-sendmail').click(function () {

                // Lấy dữ liệu từ biểu mẫu
                var formData = {
                    email: $('#email').val()
                };
                // Gửi request AJAX
                $.ajax({
                    type: 'POST',
                    url: '/Authentication/ForgotPassword', // Lấy URL từ thuộc tính action của form
                    data: formData,
                    success: function (response) {
                        if (response.state == true) {
                            alert(response.message);
                            location.href = "/Authentication";
                        } else {
                            alert(response.message)
                        }
                    },
                    error: function (err) {

                    }
                });
            });
        });
    </script>
</body>

</html>

