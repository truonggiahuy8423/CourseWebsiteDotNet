@{
    Layout = null;
}

@{
    string? error = null;
    string? account = null;
    string? password = null;

    if (ViewData.ContainsKey("Error"))
    {
        error = ViewData["Error"] as string;
    }
    if (ViewData.ContainsKey("Acc"))
    {
        account = ViewData["Acc"] as string;
    }
    if (ViewData.ContainsKey("Pas"))
    {
        password = ViewData["Pas"] as string;
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LearnHub Course Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    @* <link rel="stylesheet" href="~/css/login.css"> *@
    <link href="//fonts.googleapis.com/css?family=Sirin+Stencil" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body style="background-color:#cfcfcf">

    <div class="container " style="margin-top : 200px">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div style="border-bottom:none !important"><div style="display: flex; justify-content: center; margin-top: 10px; margin-bottom: 10px;"><img class="login-form__logo" src="~/img/logo_course.png" alt="Logo"></div></div>
                    <div class="card-body">
                        <h2 class="card-title text-start mb-3">Login</h2>    <div class="mt-2 mb-2 text-danger" >
                            @if (error != null)
                            {
                                @error
                                ;
                            }
                        </div>
                        <form action="/Authentication/Login" method="POST">
                            <div class="mb-3">
                                <input type="text" class="form-control" id="1" name="account" placeholder="Username(email)" @{
                                    if (account != null)
                                    {
                                        @: value="@account"
                                    }
                                }>
                            </div>
                            <div class="mb-4">

                                <input type="password" class="form-control" id="2" name="password" placeholder="Password" @{
                                if (password != null)
                                {
                                @: value=" @password"
                                }
                                
                                
                                }>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark text-white ">Login</button>
                            </div>
                            <div class=" mt-3">
                                ForgotPassword ? <a asp-action="ForgotPassword" asp-controller="Authentication" >Click here</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>

