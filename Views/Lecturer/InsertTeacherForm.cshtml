@{
    <div class="form-container">
        <div class="insert-teacher-form bg-white h-auto" style="width: 70%;">
            <div class="insert-teacher-form__title-section w-100 bg-dark d-flex justify-content-start align-items-center" style="height: 60px;">
                <h5 class="insert-teacher-form__title text-white fw-bold" style="margin-left: 25px;">Thêm giáo viên</h5>
            </div>
            <div class="insert-teacher-form__content-section p-3">
                <div class="insert-teacher-form__info-container row">
                    <div class="col-6 mb-5 text-center">
                        <label class="me-3">Họ và tên</label>
                        <input type="text" class="insert-teacher-form__fullname">
                    </div>
                    <div class="col-6 mb-5 text-center">
                        <label class="me-3">Ngày sinh</label>
                        <input type="date" class="insert-teacher-form__dob">
                    </div>
                    <div class="col-6 text-center">
                        <label class="me-3">Email</label>
                        <input type="text" class="insert-teacher-form__email">
                    </div>
                    <div class="col-6 text-center">
                        <label class="me-3">Giới tính</label>
                        <select name="gioitinh" class="insert-teacher-form__sex">
                            <option value="1">Nam</option>
                            <option value="0">Nữ</option>
                        </select>
                    </div>
                </div>
                <div class="insert-teacher-form__btn-container d-flex justify-content-end align-items-center">
                    <button class="insert-teacher-form__cancel-btn btn btn-light me-3 shadow-sm">Hủy</button>
                    <button class="insert-teacher-form__save-btn btn btn-light shadow-sm">Lưu thông tin</button>
                </div>
            </div>
        </div>
    </div>
}
